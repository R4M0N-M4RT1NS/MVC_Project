@model IEnumerable<PlataformaAvaliacao.Models.Disciplina>

@{
    ViewData["Title"] = "Index";
}
<h1 class="mb-4">Disciplina</h1>
<p>
    <a asp-action="Create" class="btn btn-success rounded-pill mb-3">+ Nova Avaliação</a>
</p>
<div class="table-responsive">
    <table class="table table-dark table-hover table-bordered rounded shadow-sm">
        <thead class="table-secondary text-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Codigo)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                    <td>
                        <a asp-controller="Disciplina" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a asp-controller="Disciplina" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalhes</a>
                        <a asp-controller="Disciplina" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
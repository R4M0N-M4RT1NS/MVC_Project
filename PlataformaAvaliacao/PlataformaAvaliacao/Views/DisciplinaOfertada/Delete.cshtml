@model PlataformaAvaliacao.Models.DisciplinaOfertada

@{
    var isDelete = ViewData["Title"]?.ToString() == "Delete";
    ViewData["Title"] = isDelete ? "Excluir Disciplina da Grade" : "Detalhes da Disciplina";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div class="card bg-metal border-secondary shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Disciplina</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Disciplina.Nome)</dd>
            <dt class="col-sm-3">Professor</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Professor.Nome)</dd>
            <dt class="col-sm-3">Ano</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Ano)</dd>
            <dt class="col-sm-3">Semestre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Semestre)</dd>
        </dl>

        @if (isDelete) {
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger rounded-pill">Confirmar Exclusão</button>
                <a asp-action="Index" class="btn btn-outline-light rounded-pill">Cancelar</a>
            </form>
        }
        else {
            <a asp-controller="Avaliacao" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary rounded-pill">Editar</a>
            <a asp-controller="Avaliacao" asp-action="Index" class="btn btn-outline-light rounded-pill">Voltar</a>
        }
    </div>
</div>
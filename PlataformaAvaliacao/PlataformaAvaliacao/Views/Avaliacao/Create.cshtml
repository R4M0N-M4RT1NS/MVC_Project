@model PlataformaAvaliacao.Models.Avaliacao

@{
    var isEdit = ViewData["Title"]?.ToString() == "Edit";
    ViewData["Title"] = isEdit ? "Edit" : "Create";
}

@if (isEdit)
{
    <h1>Editar Avaliação</h1>
}
else
{
    <h1>Nova Avaliação</h1>
}

<hr />
<div class="card bg-metal border-light shadow-sm">
    <div class="card-body">
        <form asp-action="@ViewData["Title"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (isEdit)
            {
                <input type="hidden" asp-for="Id" />
            }

            <!-- Campo Nota -->
            <div class="mb-3">
                <label asp-for="Nota" class="form-label"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>

            <!-- Campo Comentário -->
            <div class="mb-3">
                <label asp-for="Comentario" class="form-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>

            <!-- Campo Recomendaria -->
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Recomendarai" />
                <label class="form-check-label" asp-for="Recomendarai">Recomendaria?</label>
            </div>

            <button type="submit" class="btn btn-primary rounded-pill">
                @(isEdit ? "Salvar" : "Criar")
            </button>
            <a asp-controller="Avaliacao" asp-action="Index" class="btn btn-outline-light rounded-pill">Voltar</a>
        </form>
    </div>
</div>

@section Scripts {
    @Html.PartialAsync("_ValidationScriptsPartial")
}

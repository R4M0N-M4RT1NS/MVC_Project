@model PlataformaAvaliacao.Models.Avaliacao
@{
    ViewData["Title"] = "Create";
}

<h1>Nova Avaliação</h1>

<hr />
<div class="card bg-metal border-light shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="MatriculaId" class="form-label">Id de Matrícula</label>
                <input asp-for="MatriculaId" class="form-control" />
                <span asp-validation-for="MatriculaId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Nota" class="form-label"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Comentario" class="form-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Recomendarai" />
                <label class="form-check-label">Recomendaria?</label>
            </div>
            <div class="mb-3">
                <label asp-for="DataAvaliacao" class="form-label">Data da Avaliação</label>
                <input asp-for="DataAvaliacao" class="form-control" />
                <span asp-validation-for="DataAvaliacao" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary rounded-pill">Criar</button>
            <a asp-controller="Avaliacao" asp-action="Index" class="btn btn-outline-light rounded-pill">Voltar</a>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
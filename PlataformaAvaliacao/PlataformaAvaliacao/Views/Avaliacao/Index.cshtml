@model IEnumerable<PlataformaAvaliacao.Models.Avaliacao>
@{
    ViewData["Title"] = "Avaliações";
}
<h1 class="mb-4">Avaliações</h1>
<p>
    <a asp-action="Create" class="btn btn-success rounded-pill mb-3">+ Nova Avaliação</a>
</p>
<div class="table-responsive">
    <table class="table table-dark table-hover table-bordered rounded shadow-sm">
        <thead class="table-secondary text-dark">
            <tr>
                <th>Id de Matrícula</th>
                <th>Nota</th>
                <th>Comentário</th>
                <th>Recomendaria?</th>
                <th>Data da Avaliação</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MatriculaId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nota)</td>
                    <td>@Html.DisplayFor(modelItem => item.Comentario)</td>
                    <td>@Html.DisplayFor(modelItem => item.Recomendarai)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataAvaliacao)</td>
                    <td>
                        <a asp-controller="Avaliacao" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a asp-controller="Avaliacao" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalhes</a>
                        <a asp-controller="Avaliacao" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>